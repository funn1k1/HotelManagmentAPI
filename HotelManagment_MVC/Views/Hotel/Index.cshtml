@model HotelViewModel

<div class="d-flex justify-content-between mb-3">
    <h2>Hotels</h2>
    <div>
        <a asp-action="Create" class="btn btn-success">Create Hotel</a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Rating</th>
            <th scope="col">Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model.Hotels)
        {
            <tr>
                <td>@hotel.Name</td>
                <td>@hotel.Address</td>
                <td>@hotel.Rating</td>
                <td>@hotel.Email</td>
                <td>
                    <div class="d-flex justify-content-center">
                        <a asp-action="Update" asp-route-id="@hotel.Id" class="btn btn-secondary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-route-id="@hotel.Id" class="btn btn-danger mx-3"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
        <tr>
    </tbody>
</table>