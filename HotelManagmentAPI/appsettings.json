{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/hotelLog-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=HotelManagmentAPI;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Jwt": {
    "SecurityKey": "jbXuoKDQFfUOxgt",
    "Issuer": "https://localhost:7238",
    "Audience": "https://localhost:7238"
  },
  "CacheProfiles": {
    "Cache1Min": {
      "Duration": "60",
      "Response": "Client",
      "VaryByQueryKeys": [ "pageNumber", "pageSize", "id", "roomNumber", "hotelId", "name" ]
    },
    "Cache2Min": {
      "Duration": "120",
      "Response": "Client",
      "VaryByQueryKeys": [ "pageNumber", "pageSize", "id", "roomNumber", "hotelId", "name" ]
    },
    "Cache24Hours": {
      "Duration": "86400",
      "Response": "Client",
      "VaryByQueryKeys": [ "pageNumber", "pageSize", "id", "roomNumber", "hotelId", "name" ]
    }
  }
}
